  <% end %>
<% else %>
    <%= link_to 'Submit A Proposal', hackathons_path, class: "btn-sm btn-success pull-right"%>
<% end %>
    <%= link_to 'Go To Main Page', hackathons_path, class: "btn-sm btn-primary   "%>

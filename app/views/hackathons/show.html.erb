      </div>
    </div>

    </div>
    <div class="col-md-8">
       
      <div class="thumbnail" style="">
      <div class="caption">
        <h3>Event Description</h3>
        <%= @hackathon.description%>
       
      </div>
    </div>
    <div class="thumbnail" style="">
      <div class="caption">
        <h3>Venue</h3>
        <%= @hackathon.hackathon_venue%>
       
      </div>
    </div>


<% if logged? %>
  <% if @hackathon.user_id == current_user.id %>

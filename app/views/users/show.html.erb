<% provide(:title, @user.user_name) %>
<%unless @user.admin?%>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @user.user_name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged? %>
  </div>
</div>
<% else %>
<div class="row">
  <aside class="col-md-2">
    <section>
      <h1>
        <%= @user.user_name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'common/stats' %>
    </section>
  </aside>
  <div class="col-md-6">
    <h3>
      List of Hackathons | <%= @hackathons.count %>
    </h3>
    <ul style="list-style-type:none;">
    <% @hackathons.each do |hackathon| %>
      <li>
        <%= link_to hackathon.title, homepage_url(hackathon.id), class: "btn btn-info"%> |
        <%= link_to 'Destroy', hackathon, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
      </br>
    <% end %>
    </ul>
    <%= will_paginate %>
  </div>
  <div class="col-md-4">
    <h3>
      List of Users | <%= @users.count %>
    </h3>
    <ul style="list-style-type:none;">
    <% @users.each do |user| %>
    <% unless user.admin? %>
    <li>
        <%= link_to user.user_name, user, class: "btn btn-info" %>
        
        <% if current_user.admin? && !current_user?(user) %>
        <%= link_to "delete", user, method: :delete,
                                    data: { confirm: "Are you sure?" } %>

        <% end %>
      
    </li>
    </br>
    <% end %>
    <% end %>
    </ul>
    <%= will_paginate %>
  </div>
</div>
<% end %>
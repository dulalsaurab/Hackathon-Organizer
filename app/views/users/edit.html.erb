<% provide(:title, 'Edit Profile') %>
<div class = "container">
<h1 class = "col-md-offset-3">Edit your profile, <%= @user.user_name%></h1>



<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'common/error_message'%>

      <%= f.label :user_name %>
      <%= f.text_field :user_name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm your password" %>
      <%= f.password_field :password_confirmation %>
      
      <br/>
      <br/>
      <%= f.submit "Save", class: "btn btn-primary" %>
      </br>
      </br>
      <%= link_to "Go Back", @user, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
</div>